{{>menu}}
<div class="row">
    <div class="col-md-6 m-2 text-center mx-auto">
        <div class="card">
            <div class="card-body">
                <h3 class="display-4">{{this.title}}</h3>
                <form action="/edit/{{this.data.iddata_movies}}" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" value="{{this.data.Title}}" name="Title" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="date" min="1970-01-01" max="2021-01-01"
                            value="{{this.data.Release}}" name="release" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" value="{{this.data.Origin}}" name="origin" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" value="{{this.data.Director}}" name="director" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" value="{{this.data.Cast}}" name="cast" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Edit movie</button>
                </form>
            </div>
        </div>
        <a href="/"><button class="btn btn-success btn-block mt-4">Back to home <span><i class="fas fa-home"></i></span></button></a>
    </div>
</div>